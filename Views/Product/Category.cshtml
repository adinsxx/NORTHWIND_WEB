@using Northwind
@using Northwind.Models
@model IEnumerable<Category>

<div class="bg-primary m-1 p-1 text-white"><h4>Category Listing</h4></div>
<ul>
    
<h2 class="mt-3"><i class="fas fa-list-ul"></i> Product Categories</h2>
<div class="list-group">
    @foreach (Category c in Model)
    {
        <a asp-action="Index" asp-route-id="@c.CategoryId" class="list-group-item list-group-item-action">@c.CategoryName - <i style="opacity:.6;">@c.Description</i></a>

    }
</ul>
</div>